<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content">
        <EditText android:layout_weight="1" android:layout_width="249dp" android:id="@+id/newContact" android:layout_height="wrap_content"></EditText>
        <Button android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/btnAddContact" android:text="@string/btnadd" android:onClick="addContact"></Button>
    </LinearLayout>
    <ListView android:id="@+id/contactList" android:layout_height="wrap_content" android:layout_width="match_parent"></ListView>
</LinearLayout>
